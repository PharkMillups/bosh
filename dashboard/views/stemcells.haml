%table(cellpadding=0 cellspacing=0)
  %tr
    %th.name Name
    %th.version Version
    %th.cid CID
    
  - @stemcells.each_with_index do |sc, i|
    %tr{:class => row_class(i)}
      %td= h sc["name"]
      %td= h sc["version"]
      %td= h sc["cid"]

  %tr
    %td.total(colspan=3)= "Total: %s" % [ @stemcells.size ]
