%table(cellpadding=0 cellspacing=0)
  %tr
    %th.name Name
    %th.version Versions
    
  - @releases.each_with_index do |sc, i|
    %tr{:class => row_class(i)}
      %td= h sc["name"]
      %td= sc["versions"].map { |version| "<span class='version'>#{h(version)}</span>" }.join(", ")

  %tr
    %td.total(colspan=2)= "Total: %s" % [ @releases.size ]
