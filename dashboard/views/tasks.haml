%table(cellpadding=0 cellspacing=0)
  %tr
    %th.id #
    %th.state State
    %th.timestamp Timestamp
    %th.result Result
    
  - @tasks.each_with_index do |task, i|
    %tr{:class => row_class(i)}
      %td= h task["id"]
      %td{:class => h(task["state"])}= h task["state"]
      %td= Time.at(task["timestamp"].to_i).utc
      %td= h task["result"]

  %tr
    %td.total(colspan=4)= "Total: %s" % [ @tasks.size ]

