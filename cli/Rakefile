desc "Run specs"
task "spec" => [ "bundler:install:test", "test:spec" ]

environments = %w(test development production)

namespace "bundler" do

  desc "Install gems"
  task "install" do
    sh("bundle install")
  end  

  environments = %w(test development production)

  environments.each do |env|
    desc "Install gems for #{env}"
    task "install:#{env}" do
      sh("bundle install --without #{(environments - [env]).join(' ')}")
    end
  end

end

namespace "test" do

  ["spec", "spec:unit", "spec:functional" ].each do |task_name|
    task task_name do
      sh("cd spec && rake #{task_name}")
    end
  end

end
